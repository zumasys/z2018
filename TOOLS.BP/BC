* REMOVED THE LOGTO FEATURE
********
* BASIC/COMPILE
********
CMND = SENTENCE()
FILENAME=FIELD(CMND," ",2)
ITEMNAME=FIELD(CMND," ",3)
IF ITEMNAME="" THEN
   * TRY AND FIGURE OUT THE SOURCE FILENAME
   EXECUTE "jshow -c ":FILENAME CAPTURING JSHOWRESULT
   POS=INDEX(JSHOWRESULT,"source file",1)
   IF NOT(POS) THEN STOP
   R=JSHOWRESULT[POS,LEN(JSHOWRESULT)]
   R=R<1,1,1>
   ITEMNAME=FILENAME
   FILENAME=FIELD(R," ",3)
END
CMND="BASIC ":FILENAME:" ":ITEMNAME
CMND:=' (T'
PRINT CMND
EXECUTE CMND CAPTURING RESULT
NUM.LINES=DCOUNT(RESULT,@AM)
FOR X=1 TO NUM.LINES
   PRINT RESULT<X>
NEXT X
IF INDEX(RESULT,"Unable to compile",1) THEN
   PRINT "********"
   PRINT "Could not compile!"
   PRINT "********"
   STOP
END
EXECUTE "CATALOG ":FILENAME:" ":ITEMNAME
